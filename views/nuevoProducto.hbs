<h2>Agregar Producto</h2>
<form action="/products/sucursal/{{sucursalId}}" method="POST">
  <input type="text" name="nombre" placeholder="Nombre" required>
  <input type="number" step="0.01" name="precio" placeholder="Precio" required>
  <label for="cantidad">Cantidad inicial</label>
  <input type="number" name="cantidad" min="0" value="0" required>
  <input type="text" name="categoria" placeholder="Categoría">
  <input type="text" name="imagen" placeholder="URL de imagen">
  <textarea name="descripcion" placeholder="Descripción"></textarea>
  <button type="submit">Crear</button>
</form>
