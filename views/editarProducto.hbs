<h2>Editar Producto</h2>
<form action="/products/{{producto.id}}/edit" method="POST">
  <input type="text" name="nombre" value="{{producto.nombre}}" required>
  <input type="number" step="0.01" name="precio" value="{{producto.precio}}" required>
  <label for="cantidad">Cantidad</label>
  <input type="number" name="cantidad" min="0" value="{{producto.cantidad}}" required>
  <input type="text" name="categoria" value="{{producto.categoria}}">
  <input type="text" name="imagen" value="{{producto.imagen}}">
  <textarea name="descripcion">{{producto.descripcion}}</textarea>
  <button type="submit">Actualizar</button>
</form>
